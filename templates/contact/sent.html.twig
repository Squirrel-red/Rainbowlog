{% extends 'base.html.twig' %}

{% block body %}
    <br><br><br><br><br>
    <h2 class="section__title-1"><span>Sent messages</span></h2>
    <br>
    {% set displayed_receivers = [] %}

    <ul>
        {% for contacts in contactSent %}
            {% if contacts.receiver.pseudo not in displayed_receivers %}
                <li>
                    <a href="{{ path('contacts_user', {'id': contacts.receiver.id})}}"><strong>to {{ contacts.receiver.pseudo }}</strong></a>
                </li>
                {% set displayed_receivers = displayed_receivers|merge([contacts.receiver.pseudo]) %}
            {% endif %}
        {% endfor %}
    </ul>
    <a href="{{ path('received_contacts') }}" class="btn btn-primary">Come back</a>
    <br>
    <br>
{% endblock %}