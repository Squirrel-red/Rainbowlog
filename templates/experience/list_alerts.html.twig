{% extends 'base.html.twig' %}

{% block title %}List of Alerts{% endblock %}
{% block meta %}RAINBOWLOG{% endblock %}

{% block body %}
<br><br><br><br>
    <h1 class="title">List of Alerts</h1>
    <hr>
    <table>
        <thead>
            <tr>
                <th class="id-table-alert">ID</th>
                <th>Type</th>
                <th>Text</th>
                <th>Date</th>
                <th>Experience</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            {% for alert in alerts %}
                <tr>
                    <td class="id-table-alert" data-label="ID">{{ alert.id }} I</td>
                    <td data-label="Type">{{ alert.type }} I</td>
                    <td data-label="Text">{{ alert.text }} I</td>
                    <td data-label="Date">{{ alert.dateAlert|date('d-m-Y H:i:s') }} I</td>
                    <td data-label="Experience"><a href="{{ path('show_experience', {'id': alert.experience.id}) }}">{{ alert.experience.title }} I</a></td>
                    <td data-label="Author">{{ alert.user.pseudo }} I</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <br>
    <a href="{{ path('app_experience') }}">Back to Experiences</a>
    <br>
    <a href="{{ path('app_home') }}">Back to Home</a>
    <br>
    <br>
{% endblock %}