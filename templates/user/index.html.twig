{% extends 'base.html.twig' %}

{% block title %}About user{% endblock %}

{% block body %}
    <div class="container-user">

        <div class="user-info-container">
            <h1>About user</h1>
    
            <div class="user-details">
                <p><strong>Nick: </strong>{{ user.pseudo }} {% if is_granted('ROLE_ADMIN') %}{% endif %}</p>
                <p><strong>Email : </strong>{{ user.email }}</p>
                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('new_message', {'id': user.id }) }}">Message</a>
                    {% else %}
                    
                    {% endif %}
                    
                    <p>Ranking : {{ averageRating|number_format(1) }}</p>
                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('user_rate', {'id': user.id }) }}" class="btn btn-secondary">Evaluation</a>
                    {% endif %}
                    
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete my account</a>
            </div>
            
        </div>
    </div>
    
{% endblock %}
