{% extends 'base.html.twig' %}

{% block title %}About user{% endblock %}

{% block body %}

            <h1>About user</h1>
                <p><strong>Nickname: </strong>{{ app.user.pseudo }} {% if is_granted('ROLE_ADMIN') %}{% endif %}</p>
                <p><strong>Email : </strong>{{ app.user.email }}</p>
                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('new_message', {'id': user.id }) }}">Message</a>
                    {% else %}
                    
                    {% endif %}
                    
                    <p>Ranking : {{ averageRating|number_format(1) }}</p>
                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('user_eval', {'id': user.id }) }}" class="btn btn-secondary">Evaluation</a>
                    {% endif %}
                    
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete my account</a> 

    
{% endblock %}
