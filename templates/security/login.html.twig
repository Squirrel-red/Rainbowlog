{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<section class="contact__section" id="contact">
    <div class="contact__container grid">

      <div class="contact__data">
        <h2 class="section__title-2">
          <span>Log in >></span>
        </h2>
        <p class="contact__description-1">
          Stay always a member of our community of the people passioned by Photography !
        </p>

        <p class="contact__description-2">
          We need your <b>Email Address</b> and <b>Nickname</b> only and we garantee
          to use your datas properly and to respect your private rights.
        </p>


      </div>

      <div class="contact__mail">
   
        <h2 class="contact__title">ENTER YOUR DATAS</h2>

        <form action="" class="contact__form" id="contact-form" method="POST">

          {% if error %}
               <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}
          <br>
          <br>
          {% if app.user %}
               <div class="mb-3">
                   You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
               </div>
          {% endif %}  

            <div class="contact__box">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus> 
            </div>

            <div class="contact__box">
                <label for="inputPassword">Password</label> 
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

                <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
      

                <button type="submit" class="contact__button button">Submit</button>

                <button type="submit" class="contact__button button"><a href="{{ path('app_forgot_password_request') }}">I change/forgot my password</a></button>

        </form>
      </div>
      <br>
      <div class="geometric-box"></div>

      <div class="contact__social">
        <img
          src="assets/img/curved-arrow.svg"
          alt=""
          class="contact__social-arrow"
        />
        <div class="contact__social-data">
          <div>
            <p class="contact__social-description-1">
              If you want to leave an opinion  >>>
            </p>
            <p class="contact__social-description-2">
              Write us on our social networks
            </p>
          </div>
          <div class="contact__social-links">
            <a
              href="https://www.facebook.com/"
              target="_blank"
              class="contact__social-link"
            >
              <i class="ri-facebook-circle-line"></i>
            </a>
            <a
              href="https://www.instagram.com/"
              target="_blank"
              class="contact__social-link"
            >
              <i class="ri-instagram-line"></i>
            </a>

            <a
              href="https://www.linkedin.com/"
              target="_blank"
              class="contact__social-link"
            >
              <i class="ri-linkedin-box-line"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
</section>

<section>
    <div id="contact-infos">
                <address><span><i class="ri-mail-fill"></i></span> admin@rainbowlog.com</address>
                <address><span><i class="ri-cellphone-fill"></i></span>+330301020304</address>
                <address><span><i class="ri-map-pin-fill"></i></span>01 Photostreet 67100 Strasbourg</address>
                <br>
     </div>
 <section>
{% endblock %}
