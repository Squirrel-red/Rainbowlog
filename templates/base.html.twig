              {#<class="{% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}"> #}
              {#<span class="nav__logo-name"></span><a href="{{ path('app_home') }}">Photoclub</a></span>#}
              <span class="nav__logo-circle"><i class="ri-camera-3-line"></i></span></div>
              <span class="nav__logo-name"></span>_RAINBOWLOG</span>
            </a>

       
            <div class="nav__menu" id="nav-menu">
              <span class="nav__title">Menu</span>
              <h3 class="nav__name">RAINBOWLOG</h3>

              {# <p>This is the club of all people liking the photography and  taking part in discussions, publishing their photos and inspiring one other.</p>
              <div class='button btn4'>************************</div> #}


              <ul class="nav__list">  
                <li class="nav__item"><a href="{{ path('app_home') }}" class="nav__link">HOME</a></li>
                <li class="nav__item"><a href="{{ path('app_photographer') }}" class="nav__link">GALLERY</a></li>
                {# <li class="nav__item"><a href="{{ path('app_comment') }}" class="nav__link">COMMENTS</a></li> #}
