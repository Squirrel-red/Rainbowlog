        </nav>

      </header>

            {# <div>
                <h3>RAINBOWLOG</h3>

                <p>This is the club of all people liking the photography and taking part in video or written discussions, publishing their photos and inspiring one other.</p>
             <div> #}


        {#   --CONTENT-- */#}

        <div class="roles" style="display:none;">
        
     
            {% if is_granted('ROLE_PHOTOGRAPHER') %}
            {# If the user has the "ROLE_PHOTOGRAPHER" role, redirect to photographer's page management #}
            <a href="{{ path('manage_profil', {slug: app.user.pseudo}) }}"><i class="fa-solid fa-palette"></i></a>
            {% elseif is_granted('IS_AUTHENTICATED_FULLY') %}
            {% endif %}
            
            {% if app.user %}
            {# <a href="{{ path('app_subscription')}}"><i class="ri-bard-fill"></i></a> #}
            <a href="{{ path('app_home') }}"><i class="fa-solid fa-palette"></i></a>
            {% endif %}
         
        </div>

            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fa-regular fa-circle-check"></i>
                <p>Success ! {{ message }}</p>
            </div>
            {% endfor %} 

            {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fa-regular fa-circle-xmark"></i>
                <p>Error ! {{ message }}</p> 
            </div>
            {% endfor %} 
    
        {############# --MAIN-- ###########################}
            
        <main class="main">
            {% block body %}
            {% endblock %}
        </main>

        <div id="back-top-btn"></div>
      

        {############# --FOOTER-- #########################}

        <footer class="footer">
            <div class="footer__container container grid">
                 <div>
                    <a href="#">
                      <figure id="logo-container">
                        <img src="{{ asset('img/logo.png') }}" alt="logo2">
                        <b><figcaption>
                          RAINBOWLOG
                        </figcaption></b>
                      </figure>
                    </a>
            
                    <p id="footerDescription">
                      <b>We admire the photography!</b>
                    </p>
                  </div>
    
                <ul class="footer__links">
                  <li> <a href="{{ path('app_home')}}"><b>HOME</b></a> </li>
                  <li>  <a href="{{ path('app_home')}}"><b>ABOUT US</b></a> </li>
                  <li>  <a href="{{ path('app_contact')}}"><b>CONTACT</b></a> </li>
                </ul>

    
                <div class="socials" id="footer-socials">
                    <a href="https://www.facebook.com"><i class="fa-brands fa-facebook "></i></a>
                    <a href="https://www.twitter.com"><i class="fa-brands fa-square-twitter"></i></a>
                    <a href="https://www.instagram.com"><i class="fa-brands fa-instagram"></i></a>
                </div> 

                    
                <span class="footer__copy">
                    
