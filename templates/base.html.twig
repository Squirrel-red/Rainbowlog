                <li class="nav__item"><a href="{{ path('app_contact')}}" class="nav__link">CONTACT</a></li>
        


                <div id="user-page"> 
                  {% if app.user %}

                            <p><a href="{{ path('show_user', {pseudo: app.user.pseudo }) }}">PROFIL</a></p>

                            {% if is_granted('ROLE_PHOTOGRAPHER') %}
                            <p><a href="{{ path('manage_profil', {pseudo: app.user.pseudo }) }}">MY PAGE</a></p>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <p><a href="{{ path('app_dashboard')}}">DASHBOARD</a></p>
                            {% endif %}
                            <p><a href=" {{ path('app_logout') }}"></i> LOGOUT</a></p>
 
                  {% else %} 

                            <p><a href="{{ path('app_login') }}">LOG IN</a></p>
                            <p><a href="{{ path('app_register') }}">SIGN UP</a></p>
 
                  {% endif %}
                </div> 

              </ul>
 
              <!-- Close button -->
              <div class="nav__close" id="nav-close">
                <i class="ri-close-line"></i>
              </div>

            </div>

            <div class="nav__buttons">
               <!-- Theme Button -->
               <i class="ri-moon-line change-theme" id="theme-button"></i>

               <!-- Toggle button -->
               <div class="nav__toggle" id="nav-toggle">
               <i class="ri-menu-4-line"></i>
